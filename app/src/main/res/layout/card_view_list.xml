<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/feeling_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/alternativo"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/feeling_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/feeling_photo"
            android:layout_alignTop="@id/feeling_photo"
            android:layout_alignRight="@id/feeling_photo"
            android:layout_alignBottom="@id/feeling_photo"
            android:layout_margin="1dp"
            android:textSize="26sp"
            android:text="@string/feeling_name"
            android:textColor="@color/accent_color"
            android:gravity="center"
            android:layout_below="@+id/feeling_photo"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>